.page
  position relative
  full-size()
  font-size 10rem
  letter-spacing (1/16 * 1em)
  transition color 1s $cubic 1s

  &::before,
  &::after
    content ''
    position absolute
    top 0
    z-index -1
    height 100%
    pointer-events none

  &::before
    left 0
    width 100%
    background-color $white
    transition opacity 1s $cubic 1s
    will-change opacity

  &::after
    left calc(50% - 1px)
    width 2px
    transform scaleY(0)
    transform-origin 50% 0
    transition background-color 1s $cubic 1s
    will-change transform
    animation scale-vertical .5s $cubic .25s forwards

  &[data-theme="black"]
    color $white

    &::before
      opacity 0

    &::after
      background-color rgba($white, .25)

  &[data-theme="white"]
    color $black

    &::before
      opacity 1

    &::after
      background-color rgba($black, .25)
