.container
  display flex
  flex-direction column
  full-size()

  > *
    z-index 0

  &_section,
  &_page
    display flex
    flex-direction column
    justify-content center
    align-items center

  &_section
    flex 1

  &_page
    padding 50px 0

  &_title
    text-transform uppercase

  &_text
    margin 50px 0
    width 480px
    font-size 5rem
    text-align center
